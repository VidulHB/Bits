<% let icon = {"CODING": "fa-solid fa-code", "DESIGN": "fa-solid fa-pen", "EXPLORE": "fa-solid fa-magnifying-glass"} %>

<div class="task-item <%if(data.advanceTask === true){%> task-advanced <%}%>" data-task-id="<%=data.task_id%>00" data-task-cat="<%=data.task_category%>" data-task-status="none" data-task-title="<%=data.task_title.toLowerCase()%>">

    <div class="ti-bg-acnt tibg-tr"></div>
    <div class="ti-bg-acnt tibg-bl"></div>
    
    <div class="ti-info">
      <h4><%= data.task_title %></h4>
      <p><%= data.task_description %></p>
    </div>
    
    <div class="ti-cta">
      <a href="/task/<%=data.task_id%>00">View task</a>
    </div>

    <div class="ti-type">
      <div><i class="<%=icon[data.task_category]%>"></i></div>
      <div class="tity-divider"></div>
      <div><% if(data.task_category === "CODING"){ %>
              <% if(data.task_id < 10) { %>
               <p><b>ID</b> C<%if(data.advanceTask === true){%>A<%}%>0<%=data.task_id%></p>
              <% } else { %>
               <p><b>ID</b> C<%if(data.advanceTask === true){%>A<%}%><%= data.task_id %></p>
              <% } %>
           <% } else if (data.task_category === "DESIGN"){ %> 
              <% if(data.task_id < 10) { %>
               <p><b>ID</b> D<%if(data.advanceTask === true){%>A<%}%>0<%=data.task_id%></p>
              <% } else { %>
               <p><b>ID</b> D<%if(data.advanceTask === true){%>A<%}%><%=data.task_id%></p>
              <% } %>
           <% } else if(data.task_category === "EXPLORE") { %>
            <% if(data.task_id < 10) { %>
              <p><b>ID</b> E<%if(data.advanceTask === true){%>A<%}%>0<%=data.task_id%></p>
            <% } else { %>
              <p><b>ID</b> E<%if(data.advanceTask === true){%>A<%}%><%= data.task_id %></p>
            <% } %>
           <% } %>
    </div>
    </div>

<!--    <div class="ti-status">-->
<!--      <p class="ti-status-text">N/A</p>-->
<!--    </div>-->

    <%if(data.advanceTask === true){%>
        <div class="ti-status ti-advanced">
            <p class="ti-status-text">Advanced</p>
        </div>
    <%} else {%>
        <div class="ti-status">
            <p class="ti-status-text">N/A</p>
        </div>
    <%}%>
    
</div>